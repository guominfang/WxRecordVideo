<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/back_layout"
        android:layout_width="@dimen/record_btn"
        android:layout_height="@dimen/record_btn"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_oval_gray">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_settings_backup_restore_black_36dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_layout"
        android:layout_width="@dimen/record_btn"
        android:layout_height="@dimen/record_btn"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_oval_gray">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_check_black_36dp"/>

    </RelativeLayout>

</merge>